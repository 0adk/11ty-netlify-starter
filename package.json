{
  "name": "11ty-netlify-starter",
  "version": "1.0.0",
  "description": "Simple Eleventy + Netlify CMS starter",
  "scripts": {
    "watch:sass": "sass --no-source-map --watch src/assets/styles:public/css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass --no-source-map src/assets/styles:public/css",
    "build:eleventy": "eleventy",
    "clean": "del-cli public",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r",
    "start": "npm-run-all clean build:sass --parallel watch:*",
    "build": "npm-run-all clean build:sass build:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0adk/11ty-netlify-starter"
  },
  "author": "Ada Kolosa",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "autoprefixer": "^10.0.4",
    "cssnano": "^4.1.10",
    "del-cli": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.14",
    "postcss-cli": "^8.3.0",
    "sass": "^1.30.0"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
